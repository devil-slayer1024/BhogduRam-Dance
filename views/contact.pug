    body
        nav#navbar 
        ul 
            li #[a(href="/") Home]
            li #[a(href="/about") About]
            li #[a(href="/services") Services]
            li #[a(href="/class") Class Info]
            li #[a(href="/contact") Contact Us]
        
        div.contactArea
            div     
                h1 Contact Us 
            form(action="/contact" method="post" class="contact-gen")
                input(name="name" placeholder="Enter your name" type="text")
                input(name="mail" placeholder="Enter your e-mail Id" type="text")
                input(name="phone" placeholder="Enter your phone no." type="number")
                input(name="dance" placeholder="Enter your favourite dance form" type="text")
                h4 Enter your date of birth :-
                input(name="date" placeholder="Enter your date of birth" type="date")
                textarea(name="address" cols="40" rows="5" placeholder="Enter your address" type="text")
                textarea(name="more" cols="40" rows="5" placeholder="Tell something more about you" type="text")
                <button class="btn"><h3>SUBMIT</h3></button>    
